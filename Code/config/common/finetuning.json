
{
    "name": "Finetunning-TCR-Binding",
    "n_gpu": 1,

    "data_loader": {
        "type": "TCR_Antigen_Dataset_AbDab",
        "args":{
            "seed": 7,
            "batch_size": 16,
            "validation_split": 0.1,
            "test_split": 0.1,
            "num_workers": 8,
            "data_dir": "../train_paired_tcr_pmhc_data-a.csv",
            "tcr_vocab_dir": "../ProcessedData/vocab/beta-2-3.csv",
            "tcr_tokenizer_dir": "/data/coding/TCRBinder-main/Result_beta/checkpoints/Pretrain/XXXX-XXXXXX",
            "tokenizer_name": "common",
            "token_length_list": "2,3",
            "antigen_seq_name": "Antigen",
            "beta_seq_name": "TCR_Beta",
            "alpha_seq_name": "TCR_Alpha",
	        "hla_seq_name": "HLA",
            "beta_max_len": 120,
            "alpha_max_len": 120,
            "antigen_max_len": 12,
	    "hla_max_len": 34,

            "test_tcrs": 1,
            "shuffle": true
        }
    },

    "arch": {
        "type": "BERTBinding_AbDab_cnn",
        "args": {
            "beta_dir": "/data/coding/TCRBinder-main/Result_beta/checkpoints/Pretrain/XXXX-XXXXXX",
            "alpha_dir": "/data/coding/TCRBinder-main/Result_alpha/checkpoints/Pretrain/XXXX-XXXXXX",
            "antigen_dir": "/data/coding/TCRBinder-main/Code/esm2/esm2_150m/",
	    "hla_dir": "/data/coding/TCRBinder-main/Code/esm2/esm2_150m/",
            "emb_dim": 256
        }
    },

    "optimizer": {
        "type": "AdamW",
        "args":{
            "BERT_lr":2e-5,
            "lr": 1e-4,
            "weight_decay": 0.0001
        }
    },
    "loss": "bce_withlogits_loss",
    "is_regression": false,
    "metrics": [
        "accuracy",
        "recall",
        "roc_auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 2,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "../Result_PHT/",
        "save_period": 200,
        "verbosity": 2,
        "logging_steps": 25,
        "monitor": "min val_loss",
        "early_stop": 5,

        "tensorboard": true
    }
}